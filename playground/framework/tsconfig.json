{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2016",
    "newLine": "LF",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": ["esnext", "dom"],
    "types": ["jest/globals", "node"],
    "rootDir": ".",
    "paths": {
      "rata": ["../../src"],
      "@framework": ["./src"]
    },
    "jsx": "react",
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "Fragment"
  },
  "include": [
    "global.d.ts",
    "src",
    "__tests__",
    "component",
    "../../src",
    "./er.tsx",
    "./state.tsx",
    "./interact.tsx",
    "./concept.tsx",
    "./activity.tsx"
  ]
}
