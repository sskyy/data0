{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "module": "esnext",
    "target": "es2019",
    "newLine": "LF",
    "useDefineForClassFields": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "declaration": true,
    "rootDir": "."
  },
  "include": [
    "./src/**/*",
    "./vite.config.ts"
  ]
}
